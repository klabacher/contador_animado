{
  "name": "countspark",
  "description": "CountSpark — WIP. A countdown timer with animated numbers built with React, Vite, TailwindCSS, and TypeScript.",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "author": {
    "name": "João Vitor Klabacher",
    "url": "https://github.com/klabacher"
  },
  "bugs": {
    "url": "https://github.com/klabacher/countspark/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --max-warnings=4",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist -b gh-pages",
    "supa": "supabase",
    "sb:login": "supabase login",
    "sb:start": "supabase start",
    "sb:stop": "supabase stop",
    "sb:gen-types": "supabase gen types typescript --linked > src/types/supabase.ts",
    "sb:push": "supabase db push"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.10.1",
    "@supabase/supabase-js": "^2.81.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.3.3",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.6",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@iconify/react": "^6.0.2",
    "@iconify/tailwind": "^1.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.19.17",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "gh-pages": "^6.3.0",
    "happy-dom": "^15.11.7",
    "postcss": "^8.5.6",
    "prettier": "3.1.1",
    "supabase": "^2.58.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.1"
  }
}
